{
  "name": "hapi-k8s-health",
  "version": "1.0.2",
  "description": "Hapi plugin for k8s metrics and health check",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepare": "npm run lint && npm run build",
    "build": "rm -rf ./dist && tsc",
    "lint": "eslint '{src,test}/**/*.ts'",
    "test": "NODE_ENV=test nyc mocha 'test/**/*.{js,ts}' --require ts-node/register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radenui/hapi-k8s-health.git"
  },
  "keywords": [
    "hapi",
    "kubernetes",
    "metrics",
    "healthcheck"
  ],
  "author": "Arthur Andrieu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/radenui/hapi-k8s-health/issues"
  },
  "homepage": "https://github.com/radenui/hapi-k8s-health#readme",
  "dependencies": {
    "prom-client": "^12.0.0"
  },
  "devDependencies": {
    "@hapi/basic": "^6.0.0",
    "@hapi/boom": "^9.1.0",
    "@hapi/hapi": "^19.1.1",
    "@types/chai": "^4.2.11",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^19.0.3",
    "@types/mocha": "^7.0.2",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^7.0.1",
    "nyc": "^15.0.1",
    "supertest": "^4.0.2",
    "ts-node": "^8.8.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
